{
  "mcpServers": {
    "claude-code": {
      "args": [
        "mcp",
        "serve"
      ],
      "autoApprove": [
        "Read",
        "NotebookRead",
        "NotebookEdit",
        "LS",
        "Grep",
        "Glob",
        "Task",
        "TodoRead",
        "TodoWrite",
        "WebSearch",
        "WebFetch",
        "exit_plan_mode"
      ],
      "command": "claude",
      "disabled": false,
      "env": []
    },
    "context7": {
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "autoApprove": true,
      "command": "bunx",
      "disabled": false
    },
    "context7-docker": {
      "args": [
        "run",
        "-i",
        "--rm",
        "context7-mcp"
      ],
      "autoApprove": true,
      "command": "docker",
      "disabled": true,
      "timeout": 60,
      "transportType": "stdio"
    },
    "firecrawl": {
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "command": "bunx",
      "disabled": true,
      "env": {
        "FIRECRAWL_API_KEY": "FIRECRAWL_API_KEY"
      }
    },
    "postgres": {
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/postgres",
        "postgresql://postgres:postgres@host.docker.internal:5433/test"
      ],
      "autoApprove": true,
      "command": "docker",
      "disabled": true,
      "disabled_tools": []
    },
    "sequentialthinking": {
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ],
      "command": "docker",
      "disabled": true
    },
    "time": {
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/time"
      ],
      "autoApprove": [
        "get_current_time",
        "convert_time"
      ],
      "command": "docker",
      "disabled": true
    }
  },
  "nativeMCPServers": {
    "mcphub": {
      "autoApprove": [
        "get_current_servers",
        "toggle_mcp_server"
      ],
      "disabled": false
    },
    "neovim": {
      "autoApprove": [
        "find_files",
        "list_directory",
        "read_file"
      ],
      "disabled": true
    }
  }
}
