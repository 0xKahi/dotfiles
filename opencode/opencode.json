{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cyberpunk-theme",
  "keybinds": {
    "leader": "ctrl+o",
    "app_help": "<leader>?",
    "editor_open": "<leader>e",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>ss",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "tool_details": "<leader>d",
    "model_list": "<leader>m",
    "theme_list": "<leader>t",
    "project_init": "<leader>i",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j",
    "messages_page_up": "ctrl+w+u",
    "messages_page_down": "ctrl+w+d",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "messages_copy": "<leader>y",
    "app_exit": "ctrl+c,<leader>q"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "enabled": true
    },
    "tavily-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "tavily-mcp"
      ],
      "enabled": true
    }
  },
  "agent": {
    "e2e-test-writer": {
      "mode": "subagent",
      "description": "Specialized agent for writing comprehensive tests",
      "prompt": "You are a test writing specialist. Write thorough, end to end tests, you will look at other tests examples and in the codebase to see how tests are structured. and you will try to structure the tests in a similar way"
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "prompt": "You are a code reviewer. Focus on security, readability, performance, and maintainability. for all uncommited changes",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  },
  "lsp": {
    "lua-ls": {
      "disabled": false,
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        "lua"
      ]
    }
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "ls": "allow",
      "*": "ask"
    }
  },
  "layout": "stretch",
  "autoshare": false,
  "autoupdate": true
}
