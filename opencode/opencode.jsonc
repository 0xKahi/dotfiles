{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cyberpunk-theme",
  "keybinds": {
    "leader": "ctrl+o",
    // "app_help": "<leader>?",
    // "tool_details": "<leader>d",
    // "project_init": "<leader>i",
    "session_share": "none",
    "sidebar_toggle": "<leader>b",
    "status_view": "<leader>s",
    "editor_open": "<leader>e",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "model_list": "<leader>m",
    "theme_list": "<leader>t",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j",
    "messages_page_up": "ctrl+w+u,pgup",
    "messages_page_down": "ctrl+w+d,pgdown",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "app_exit": "ctrl+c,<leader>q"
  },
  "username": "kahi",
  "layout": "stretch",
  "share": "manual",
  "autoupdate": "notify",
  "tui": {
    "diff_style": "auto"
  },
  "enabled_providers": [
    "anthropic",
    "opencode",
    "github-copilot"
  ],
  "small_model": "github-copilot/claude-haiku-4.5",
  "provider": {
    "anthropic": {
      "models": {
        "Claude Sonnet 4.5 (reasoning)": {
          "id": "claude-sonnet-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        },
        "Claude Haiku 4.5 (reasoning)": {
          "id": "claude-haiku-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 12000
            }
          }
        }
      }
    },
    "opencode": {
      "models": {
        "Claude Sonnet 4.5 (reasoning)": {
          "id": "claude-sonnet-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budget_tokens": 16000
            }
          }
        },
        "Claude Haiku 4.5 (reasoning)": {
          "id": "claude-haiku-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budget_tokens": 12000
            }
          }
        }
      }
    }
  },
  "agent": {
    "general": {
      "disable": false
    },
    "explore": {
      "disable": false
    },
    "plan": {
      "color": "#ff966c"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "enabled": true
    },
    "tavily-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "tavily-mcp"
      ],
      "enabled": false
    },
    "perplexity-mcp": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "perplexity-mcp"
      ],
      "enabled": true,
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}",
        "PERPLEXITY_TIMEOUT_MS": "600000"
      }
    },
    "firecrawl": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "firecrawl-mcp"
      ],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
      }
    },
    "coingecko_mcp": {
      "type": "remote",
      "url": "https://mcp.api.coingecko.com/sse"
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    }
  },
  "lsp": {
    "lua-ls": {
      "disabled": false,
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        "lua"
      ]
    }
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "ls": "allow",
      "find *": "allow",
      "fd *": "allow",
      "rg *": "allow"
    },
    "external_directory": "ask"
  },
  "tools": {
    "context7*": false,
    "tavily-mcp*": false,
    "firecrawl*": false,
    "coingecko_mcp*": false,
    "perplexity-mcp*": false,
    "gh_grep*": false,
    "exa*": false
  },
  "experimental": {
    "chatMaxRetries": 2,
    "batch_tool": true
  }
}
