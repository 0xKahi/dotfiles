{
  "data": {
    "directory": ".opencode"
  },
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "env": null,
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "type": "",
      "url": "",
      "headers": null
    },
    "tavily-mcp": {
      "command": "npx",
      "env": null,
      "args": [
        "-y",
        "tavily-mcp"
      ],
      "type": "",
      "url": "",
      "headers": null
    }
  },
  "providers": {
    "anthropic": {
      "apiKey": "",
      "disabled": false
    },
    "gemini": {
      "apiKey": "",
      "disabled": false
    },
    "openai": {
      "apiKey": "",
      "disabled": false
    }
  },
  "lsp": {
    "go": {
      "enabled": false,
      "command": "gopls",
      "args": null,
      "options": null
    },
    "lua": {
      "enabled": false,
      "command": "lua-language-server",
      "args": null,
      "options": null
    },
    "typescript": {
      "enabled": false,
      "command": "typescript-language-server",
      "args": [
        "--stdio"
      ],
      "options": null
    }
  },
  "agents": {
    "coder": {
      "model": "gemini-2.5",
      "maxTokens": 50000,
      "reasoningEffort": ""
    },
    "task": {
      "model": "gemini-2.5",
      "maxTokens": 5000,
      "reasoningEffort": ""
    },
    "title": {
      "model": "gemini-2.5-flash",
      "maxTokens": 80,
      "reasoningEffort": ""
    }
  },
  "tui": {
    "theme": "tokyonight"
  },
  "shell": {
    "path": "/bin/zsh",
    "args": [
      "-l"
    ]
  },
  "autoCompact": true
}
